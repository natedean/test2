                  <li><a class="btn btn-warning btn-sm" value="Bb">Key of Bb</a></li>
                  <li><a class="btn btn-warning btn-sm" value="B">Key of B</a></li>
                  <li><a class="btn btn-warning btn-sm" value="C">Key of C</a></li>
                  <li><a class="btn btn-warning btn-sm" value="Db">Key of Db</a></li>
                  <li><a class="btn btn-warning btn-sm" value="D">Key of D</a></li>
                  <li><a class="btn btn-warning btn-sm" value="Eb">Key of Eb</a></li>
                  <li><a class="btn btn-warning btn-sm" value="E">Key of E</a></li>
                  <li><a class="btn btn-warning btn-sm" value="F">Key of F</a></li>
